<%= render "shared/header" %>

<div class="information">
  <div class="user-nickname">
    <%= @user.nickname %>
  </div>
  <%=link_to '変更', edit_user_registration_path(@user.id), class: "change" %>
</div>
<div class="user-introduction">
  <%= @user.introduction %>
</div>

<div class="contents">
<ul class='tweet-lists'>
  <% @tweets.each do |tweet| %>
    <li class='tweet-list'>
      <%= link_to tweet_path(tweet.id), class: "no-underline" do %>
        <div class="upper-content">
          <div class="content-user">
            <%= tweet.user.nickname %>
          </div>
          <div class="content-date">
            <%= tweet.created_at %>
          </div>
        </div>
        <div class="lower-content">
          <div class="content-tweet">
            <%= tweet.text %>
          </div>
          <%= image_tag tweet.image.variant(resize: '450x450'), class: 'tweet-image' if tweet.image.attached? %>
        </div>
      <% end %>
    </li>
    <div class="margin"></div>
  <% end %>
</ul>
</div>

<%= render "shared/icon" %>

<%= render "shared/footer" %>