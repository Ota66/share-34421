<%= render "shared/header" %>

<div class="contents">
<ul class='tweet-lists'>
  <p><%= @user.nickname %>さんの投稿一覧</p>
  <% @tweets.each do |tweet| %>
    <li class='tweet-list'>
      <%= link_to tweet_path(tweet.id), class: "no-underline" do %>
        <div class="upper-content">
          <div class="content-user">
            <%= tweet.user.nickname %>
          </div>
          <div class="content-date">
            <%= tweet.created_at %>
          </div>
        </div>
        <div class="lower-content">
          <div class="content-tweet">
            <%= tweet.text %>
          </div>
          <%= image_tag tweet.image.variant(resize: '450x450'), class: 'tweet-image' if tweet.image.attached? %>
        </div>
      <% end %>
    </li>
    <div class="margin"></div>
  <% end %>
</ul>
</div>


<% if current_user.id != @user.id %>
  <% if user_signed_in? %>
    <%= link_to("#", class: 'post-btn') do %>
      <span class='post-btn-text'>メッセージ</span>
      <%= image_tag 'icon-256.png' , size: '185x50' ,class: "post-btn-icon" %>
    <% end %>
  <% else %>
    <%= link_to(new_user_session_path, class: 'post-btn') do %>
      <span class='post-btn-text'>メッセージ</span>
      <%= image_tag 'icon-256.png' , size: '185x50' ,class: "post-btn-icon" %>
    <% end %>
  <% end %>
<% end %>

<%= render "shared/footer" %>