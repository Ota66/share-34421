<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1>ログイン</h1>
      <div class="form-email">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
        </div>
        <%= f.email_field :email, class:"input", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-password">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード</label>
          </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", autcomplete: "off" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン" %>
        <div class="legal-text">
          続行することで、Hogezonの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバシー規約", "#" %>
          に同意するものとみなされます。
        </div>
      </div>
    <% end %>

    <div class="box-newusr">
      <p><span>---------</span> Sharesの新しいお客様ですか？ <span>---------</span></p>
      <%= link_to "Sharesアカウントを作成", new_user_registration_path %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
