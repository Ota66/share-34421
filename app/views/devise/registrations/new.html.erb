<%= render "shared/header" %>

<div class="box">
  <div class="box-inner">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <h1>新規登録</h1>
      <div class="form-nickname">
        <div class='form-text-wrap'>
          <label class="form-text">ニックネーム</label>
        </div>
        <%= f.text_field :nickname, class:"input", id:"nickname", placeholder:"例) Shares太郎", autofocus: true, maxlength:"40" %>
      </div>
      <div class="form-email">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
        </div>
        <%= f.email_field :email, class:"input", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-password">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード</label>
          </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", autcomplete: "off" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      <div class="form-password-confirmation">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)</label>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい", autcomplete: "off" %>
      </div>
      <div class="box-login">
        <%= f.submit "新規登録" %>
        <div class="legal-text">
          続行することで、Sharesの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバシー規約", "#" %>
          に同意するものとみなされます。
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>


