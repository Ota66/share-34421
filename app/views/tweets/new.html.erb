<%= render "shared/header" %>

<div class="box2">
  <div class="box-inner">
    <%= form_with model: @tweet, url: tweets_path, class: 'registration-main', local: true do |f| %>
      <h1>投稿</h1>
      <div class="form-text">
        <%= f.text_area :text, class:"input", id:"text", placeholder:"例) おはよう！", autofocus: true %>
      </div>
      <div class="form-image">
        <label class="form-image-wrap">
          <%= f.file_field :image, class: 'hidden'%>
        </label>
      </div>
      <div class="from-video">
        <label class="form-video-wrap">
          <%= f.file_field :video, :accept => 'video/*' %>
        </label>
      </div>
      <div class="box-send">
        <%= f.submit "投稿" %>
      </div>
    <% end %>
  </div>
</div>


<%= render "shared/footer" %>