<%= render "shared/header" %>

<div class="box">
  <div class="box-inner">
    <%= form_with(model: @tweet, local: true) do |f| %>
      <h1>編集</h1>
      <div class="form-text">
        <%= f.text_area :text, class:"input", id:"text", placeholder:"例) おはよう！", autofocus: true %>
      </div>
      <div class="form-image">
        <label class="form-image-wrap">
          画像
        </label>
        <%= f.file_field :image, class: 'hidden' %>
      </div>
      <div class="from-video">
        <label class="form-video-wrap">
          動画
        </label>
        <%= f.file_field :video, :accept => 'video/*' %>
      </div>
      <div class="box-send">
        <%= f.submit "完了" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>